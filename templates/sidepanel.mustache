{{!
    @template block_townsquare/sidepanel

    This template renders the side panel with the filters for the townsquare content.

    Variables required for this template:
    * courses - Array of courses that show notifications in townsquare
    * helpicon - Text that the help icon shows

    Example (json):
    {
        "courses" : [
            {
                "courseid" => 20,
                "coursename" => "
            },
        ],
        "helpicon" : [
            {
                "text" => "By clicking on the save button ..."
            }
         ]
     }
}}
<div class="townsquare_filter_menu accordion" id="ts_filter">
    <div class="accordion-item">
        <h2 class="accordion-header" id="ts_course_filter">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#ts_user_courses" aria-expanded="true" aria-controls="ts_user_courses">
                {{#str}}coursefilter, block_townsquare{{/str}}
            </button>
        </h2>
        <div id="ts_user_courses" class="accordion-collapse collapse show" aria-labelledby="ts_course_filter" data-bs-parent="#ts_filter">
            <div class="accordion-body townsquare_sidepanel">
                {{#courses}}
                    <div class="form-check">
                        <input class="ts_course_checkbox form-check-input" name="ts_course_checkbox" type="checkbox" value="" id="{{courseid}}" checked>
                        <label class="form-check-label" for="{{courseid}}">
                            {{coursename}}
                        </label>
                    </div>
                {{/courses}}
            </div>
        </div>
    </div>

    <div class="accordion-item">
        <h2 class="accordion-header" id="ts_time_filter">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#ts_times" aria-expanded="false" aria-controls="ts_times">
                {{#str}}timefilter, block_townsquare{{/str}}
            </button>
        </h2>
        <div id="ts_times" class="accordion-collapse collapse" aria-labelledby="ts_time_filter" data-bs-parent="#ts_filter">
            <div class="accordion-body">
                <div class="btn-group-vertical w-100 mb-2 ts_time_group" role="group">
                    <input type="radio" class="btn-check ts_all_time_button" name="ts_time_options" id="ts_time_all" autocomplete="off" checked>
                    <label class="ts_time_buttons btn btn-secondary w-100" for="ts_time_all">
                        {{#str}}allnotifications, block_townsquare{{/str}}
                    </label>
                </div>
                <div class="btn-group-vertical w-100 mb-2 ts_time_group" role="group">
                    <input type="radio" class="btn-check ts_future_time_button" name="ts_time_future" id="ts_time_next_twodays" autocomplete="off">
                    <label class="ts_time_buttons btn btn-secondary w-100" for="ts_time_next_twodays">
                        {{#str}}nexttwodaysnotifications, block_townsquare{{/str}}
                    </label>
                    <input type="radio" class="btn-check ts_future_time_button" name="ts_time_future" id="ts_time_next_fivedays" autocomplete="off">
                    <label class="ts_time_buttons btn btn-secondary w-100" for="ts_time_next_fivedays">
                        {{#str}}nextfivedaysnotifications, block_townsquare{{/str}}
                    </label>
                    <input type="radio" class="btn-check ts_future_time_button" name="ts_time_future" id="ts_time_next_week" autocomplete="off">
                    <label class="ts_time_buttons btn btn-secondary w-100" for="ts_time_next_week">
                        {{#str}}nextweeknotifications, block_townsquare{{/str}}
                    </label>
                    <input type="radio" class="btn-check ts_future_time_button" name="ts_time_future" id="ts_time_next_month" autocomplete="off">
                    <label class="ts_time_buttons btn btn-secondary w-100" for="ts_time_next_month">
                        {{#str}}nextmonthnotifications, block_townsquare{{/str}}
                    </label>
                </div>
                <div class="btn-group-vertical w-100 ts_time_group" role="group">
                    <input type="radio" class="btn-check ts_past_time_button" name="ts_time_past" id="ts_time_last_twodays" autocomplete="off">
                    <label class="ts_time_buttons btn btn-secondary w-100" for="ts_time_last_twodays">
                        {{#str}}lasttwodaysnotifications, block_townsquare{{/str}}
                    </label>
                    <input type="radio" class="btn-check ts_past_time_button" name="ts_time_past" id="ts_time_last_fivedays" autocomplete="off">
                    <label class="ts_time_buttons btn btn-secondary w-100" for="ts_time_last_fivedays">
                        {{#str}}lastfivedaysnotifications, block_townsquare{{/str}}
                    </label>
                    <input type="radio" class="btn-check ts_past_time_button" name="ts_time_past" id="ts_time_last_week" autocomplete="off">
                    <label class="ts_time_buttons btn btn-secondary w-100" for="ts_time_last_week">
                        {{#str}}lastweeknotifications, block_townsquare{{/str}}
                    </label>
                    <div class="dropdown-divider"></div>
                    <input type="radio" class="btn-check ts_past_time_button" name="ts_time_past" id="ts_time_last_month" autocomplete="off">
                    <label class="ts_time_buttons btn btn-secondary w-100" for="ts_time_last_month">
                        {{#str}}lastmonthnotifications, block_townsquare{{/str}}
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="accordion-item">
        <h2 class="accordion-header" id="ts_letter_filter">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#ts_fletters" aria-expanded="false" aria-controls="ts_fletters">
                {{#str}}letterfilter, block_townsquare{{/str}}
            </button>
        </h2>
        <div id="ts_fletters" class="accordion-collapse collapse" aria-labelledby="ts_letter_filter" data-bs-parent="#ts_filter">
            <div class="accordion-body">
                <div class="form-check">
                    <input class="ts_letter_checkbox form-check-input" name="ts_letter_checkbox" type="checkbox" value="" id="basicletter" checked>
                    <label class="form-check-label" for="basicletter">
                        {{#str}}basicletters, block_townsquare{{/str}}
                    </label>
                </div>
                <div class="form-check">
                    <input class="ts_letter_checkbox form-check-input" name="ts_letter_checkbox" type="checkbox" value="" id="completionletter" checked>
                    <label class="form-check-label" for="completionletter">
                        {{#str}}completionletters, block_townsquare{{/str}}
                    </label>
                </div>
                <div class="form-check">
                    <input class="ts_letter_checkbox form-check-input" name="ts_letter_checkbox" type="checkbox" value="" id="postletter" checked>
                    <label class="form-check-label" for="postletter">
                        {{#str}}postletters, block_townsquare{{/str}}
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="dropdown-divider"></div>

    <div class="ts_usersettings">
        <div class="ts_usersettings_button d-flex">
            <div class="btn-group-vertical w-100" role="group">
                <button type="button" class="btn btn-secondary w-100" id="ts_usersettings_savebutton">{{#str}}savebutton, block_townsquare{{/str}}</button>
            </div>
            <div class="ts_usersettings_help">
                {{#savehelpicon}}
                    {{>core/help_icon}}
                {{/savehelpicon}}
            </div>
        </div>
        <div class="dropdown-divider"></div>
        <div class="ts_usersettings_button d-flex">
            <div class="btn-group-vertical w-100" role="group">
                <button type="button" class="btn btn-secondary w-100" id="ts_usersettings_resetbutton">{{#str}}resetbutton, block_townsquare{{/str}}</button>
            </div>
            <div class="ts_usersettings_help">
                {{#resethelpicon}}
                    {{>core/help_icon}}
                {{/resethelpicon}}
            </div>
        </div>
    </div>
</div>
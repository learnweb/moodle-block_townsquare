{{!
    @template block_townsquare/blockcontent

    This template renders the main content area for the townsquare block.

     Variables required for this template:
     * content - Array with content
        * isorientationmarker - Boolean variable if current content is a orientationmarker
        * isbasic - Boolean variable if current content is a basic notification
        * isactivitycompletion - Boolean variable if current content is an activity completion
        * ispost - Boolean variable if current content is a post

    Example (json):
    {
        "content": [
            {
                "contentid": 0,
                "isorientationmarker": true
            },
            {
                "contentid": 1,
                "isactivitycompletion": true,
                "coursename": "Moodle Engineering",
                "modulename":"survey",
                "content": "How difficult was the exam? should be completed",
                "created": "28.10.2023",
                "linktoactivity": "http://localhost/moodle/mod/survey/view.php?id=72",
                "linktocourse": "http://localhost/moodle/course/view.php?id=20"
            },
            {
                 "contentid": 2,
                 "isbasic": true,
                 "coursename": "Moodle Engineering",
                 "modulename": "lesson",
                 "content": "Lesson 1: Quantum Theory closes",
                 "created": "20.12.2023",
                 "linktocourse": "http://localhost/moodle/course/view.php?id=20",
                 "linktoactivity": "http://localhost/moodle/mod/lesson/view.php?id=314"
            },
            {
                "contentid": 3,
                "ispost": true,
                "coursename": "Moodle Engineering",
                "instancename": "Exam Questions",
                "discussionsubject": "Hour of Exam",
                "anonymous": false,
                "authorname": "Tamaro Walter",
                "authorpicture": "<img src="http://localhost/moodle/pluginfile.php/5/user/icon/boost/f2?rev=13" class="userpicture" width="35" height="35" alt="" />",
                "message": "<div class="text_to_html"><p>When do we write the exam?</p></div>",
                "created": "03.11.2023",
                "linktocourse": "http://localhost/moodle/course/view.php?id=20",
                "linktoactivity": "http://localhost/moodle/mod/moodleoverflow/view.php?id=66",
                "linktopost": "http://localhost/moodle/mod/moodleoverflow/discussion.php?d=4#p6",
                "linktoauthor": "http://localhost/moodle/user/view.php?id=2"
            }
        ]
    }
}}
<div id="townsquare_root" class="townsquare_root container-fluid">
    <div class="row townsquare_main">

        <div class="col-md-3 townsquare_sidepanel">
            {{#newsidepanel}}
                {{> block_townsquare/sidepanel}}
            {{/newsidepanel}}
            {{^newsidepanel}}
                {{> block_townsquare/sidepanel_old}}
            {{/newsidepanel}}

        </div>

        <div class=" col-md-9 townsquare_content">
            <div class="townsquare_letters">
                {{#content}}
                        {{#isorientationmarker}}
                            {{> block_townsquare/orientationmarker}}
                        {{/isorientationmarker}}
                        {{#isbasic}}
                            {{> block_townsquare/basicletter}}
                        {{/isbasic}}
                        {{#isactivitycompletion}}
                            {{> block_townsquare/activitycompletionletter}}
                        {{/isactivitycompletion}}
                        {{#ispost}}
                            {{> block_townsquare/postletter}}
                        {{/ispost}}
                {{/content}}
            </div>
        </div>
    </div>
</div>
